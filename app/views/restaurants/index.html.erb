
<div data-role="header">
	<h1><%= @restaurant.name %>, <%= Date::DAYNAMES[@today.wday] %></h1>
</div>	

<ul data-role="listview">
	<% @menus.each do |menu| %>
		<li>
			<h3><%= menu.name %>
			</h3>
			<p><i><%= menu.type %></i></p>
			<p><%= menu.description %></p>
			<% menu["side_dishes"].each do |beilage| %>
				<p><%= translator.translate beilage[1], :from => 'de', :to => I18n.locale.to_s %></p>
			<% end%>
			<p><%= menu.price %></p>
			<p><%= menu.counter %></p>
		</li>
	<% end %>
</ul>

