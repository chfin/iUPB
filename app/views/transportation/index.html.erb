
<% content_for :header do %>
<h1><%= t ".buses_leaving "%></h1>
<% end %>
<ul data-role="listview">
	<% @trips.each do |trip| %>
		<li>
			<h3>
			<%= t '.trip_at', :station => trip["station"], :date => l(trip["date"], format: "%H:%M") %>
			</h3>
			<p><%= t ".line" %> <%= trip["line"] %>, <%= t ".to" %> <%= trip["direction"] %>
			</p>
		</li>
	<% end %>
</ul>