<%= content_for "page-attributes" do %>id="twitterPage"<% end %>
<script>
$('#twitterPage').live( 'pageinit', function(event) {
  reload = function(){
    $("#twitter_list").twitterFeed(function()
    {
      $("#twitter_list").listview('refresh');
    });
  }
  reload();
  $("#reload-button").bind("tap", function(e){
    reload();
  })
});
</script>
<% content_for :header do %>
<h1><%= t ".UPB_on_twitter"%></h1>
<a href="#" id="reload-button" class="ui-btn-right" data-role="button" data-icon="refresh" data-iconpos="notext">refresh</a>
<% end %>

<ul id="twitter_list" data-role="listview">
<li><%= t "please_wait" %></li>
</ul>

