
<% content_for :header do %>
<h1><%= t ".current_weather "%></h1>
<% end %>
<ul class="nav nav-tabs nav-stacked">
	<li><h4><%= t ".temperature" %>: <%= number_with_delimiter @weatherData['temp']  %>째 C</h3></li>
	<li><h4><%= t ".min" %>.  <%= t ".temperature" %>: <%= number_with_delimiter @weatherData['tempmin'] %>째 C</h3></li>
	<li><h4><%= t ".max" %>. <%= t ".temperature" %>: <%= number_with_delimiter @weatherData['tempmax'] %>째 C</h3></li>
	<li><h4><%= t ".sunrise" %>: <%= @weatherData['sonnenaufgang'] %></h3></li>
	<li><h4><%= t ".sunset" %>: <%= @weatherData['sonnenuntergang'] %></h3></li>
	<li><h4><%= t ".forecast" %>: <%= number_with_delimiter @forecast['city']['forecast'][Time.now.strftime("%Y-%m-%d")]['tx'] %>째 C / <%= @forecast['city']['forecast'][Time.now.strftime("%Y-%m-%d")]['w_txt'] %></h3></li>
</ul>
<p style="color:grey; font-size:10px;">
	Aktuelle Daten: <a href="http://wetter.uni-paderborn.de/">Wetterstation Uni Paderborn</a>. Vorhersage: <a href="http://www.wetter.com/">wetter.com</a>.
</p>
